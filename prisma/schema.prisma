generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                     Int        @id @default(autoincrement())
  name_product           String     @unique
  price_product          Float
  quantity_product_stock Int        @default(0)
  entrance               Entrance[]
  exit                   Exit[]

  @@map("products")
}

model Entrance {
  id                Int                @id @default(autoincrement())
  supplier          String
  quantity_products Int
  price_total       Float
  entrance_date     DateTime           @default(now()) @db.Date
  product           Product            @relation(fields: [id_product], references: [id])
  id_product        Int
  devolution        Devolution[]
  defective_product DefectiveProduct[]

  @@map("entrances")
}

model Exit {
  id                Int      @id @default(autoincrement())
  description       String
  quantity_products Int
  price_total       Float
  exit_date         DateTime @default(now()) @db.Date
  product           Product  @relation(fields: [id_product], references: [id])
  id_product        Int

  @@map("exits")
}

model Devolution {
  id                Int      @id @default(autoincrement())
  description       String
  quantity_products Int
  devolution_date   DateTime @default(now()) @db.Date
  entrance          Entrance @relation(fields: [id_entrance], references: [id])
  id_entrance       Int

  @@map("devolutions")
}

model DefectiveProduct {
  id                Int      @id @default(autoincrement())
  description       String
  quantity_products Int
  entrance          Entrance @relation(fields: [id_entrance], references: [id])
  id_entrance       Int

  @@map("defective_products")
}
